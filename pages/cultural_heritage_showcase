    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Smooth scroll to sections
        function scrollToSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                section.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        }

        // Timeline detail modal (placeholder)
        function showTimelineDetail(period) {
            console.log(`Showing details for ${period} period`);
            // In real implementation, this would open a detailed modal
        }

        // Regional craft explorer
        function showRegionalCraft(region) {
            console.log(`Showing craft details for ${region}`);
            // In real implementation, this would highlight the region and show details
        }

        function exploreRegion(region) {
            console.log(`Exploring ${region} crafts`);
            // In real implementation, this would navigate to detailed regional page
        }

        // Technique filtering
        function filterTechniques(category) {
            const cards = document.querySelectorAll('.technique-card');
            const filters = document.querySelectorAll('.technique-filter');
            
            // Update filter buttons
            filters.forEach(filter => {
                filter.classList.remove('active', 'bg-primary', 'text-white');
                filter.classList.add('bg-white', 'text-text-primary', 'border', 'border-gray-200');
            });
            
            event.target.classList.remove('bg-white', 'text-text-primary', 'border', 'border-gray-200');
            event.target.classList.add('active', 'bg-primary', 'text-white');
            
            // Filter cards
            cards.forEach(card => {
                if (category === 'all' || card.classList.contains(category)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Technique demo modal (placeholder)
        function openTechniqueDemo(technique) {
            console.log(`Opening 360° demo for ${technique}`);
            // In real implementation, this would open an immersive 360° viewer
        }

        // Cultural stories display
        function showCulturalStories(category) {
            console.log(`Showing cultural stories for ${category}`);
            // In real implementation, this would filter and display relevant stories
        }

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in');
                }
            });
        }, observerOptions);

        // Observe all cultural cards for animation
        document.querySelectorAll('.cultural-card').forEach(card => {
            observer.observe(card);
        });
    </script>
