    <script>
        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Voice playback simulation
        function playVoice(language) {
            // Simulate voice playback
            console.log(`Playing voice in ${language}`);
            // In real implementation, this would use Web Speech API
        }

        // Community info display
        function showCommunityInfo(region) {
            console.log(`Showing info for ${region}`);
            // In real implementation, this would show detailed community metrics
        }

        // Carousel functionality
        let currentStory = 0;
        const totalStories = 2;

        function nextStory() {
            currentStory = (currentStory + 1) % totalStories;
            updateCarousel();
        }

        function previousStory() {
            currentStory = (currentStory - 1 + totalStories) % totalStories;
            updateCarousel();
        }

        function goToStory(index) {
            currentStory = index;
            updateCarousel();
        }

        function updateCarousel() {
            const carousel = document.getElementById('storiesCarousel');
            const translateX = -currentStory * 100;
            carousel.style.transform = `translateX(${translateX}%)`;
            
            // Update indicators
            const indicators = document.querySelectorAll('[onclick^="goToStory"]');
            indicators.forEach((indicator, index) => {
                if (index === currentStory) {
                    indicator.className = 'w-3 h-3 rounded-full bg-primary-600 transition-cultural';
                } else {
                    indicator.className = 'w-3 h-3 rounded-full bg-gray-300 hover:bg-gray-400 transition-cultural';
                }
            });
        }

        // Auto-advance carousel
        setInterval(nextStory, 8000);

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
