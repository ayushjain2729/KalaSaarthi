    <script>
        let currentStep = 1;
        let selectedLanguage = 'en';
        let isInteractiveMode = true;

        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Start interactive demo
        function startInteractiveDemo() {
            isInteractiveMode = true;
            showLanguageModal();
        }

        // Start guided demo
        function startGuidedDemo() {
            isInteractiveMode = false;
            showLanguageModal();
        }

        // Show language selection modal
        function showLanguageModal() {
            document.getElementById('languageModal').classList.remove('hidden');
        }

        // Select language and proceed
        function selectLanguage(lang) {
            selectedLanguage = lang;
            document.getElementById('languageModal').classList.add('hidden');
            showCompatibilityCheck();
        }

        // Show device compatibility check
        function showCompatibilityCheck() {
            document.getElementById('compatibilityCheck').classList.remove('hidden');
            
            // Simulate compatibility checks
            setTimeout(() => {
                document.getElementById('micStatus').innerHTML = '<span class="text-success">‚úì Available</span>';
                document.getElementById('micCheck').classList.add('ring-2', 'ring-success');
            }, 1000);

            setTimeout(() => {
                document.getElementById('cameraStatus').innerHTML = '<span class="text-success">‚úì Available</span>';
                document.getElementById('cameraCheck').classList.add('ring-2', 'ring-success');
            }, 2000);

            setTimeout(() => {
                document.getElementById('speedStatus').innerHTML = '<span class="text-success">‚úì Good (4.2 Mbps)</span>';
                document.getElementById('speedCheck').classList.add('ring-2', 'ring-success');
                document.getElementById('continueDemo').classList.remove('hidden');
            }, 3000);
        }

        // Start the main demo
        function startDemo() {
            document.getElementById('compatibilityCheck').classList.add('hidden');
            document.getElementById('demoInterface').classList.remove('hidden');
            updateStepUI();
        }

        // Upload photo simulation
        function uploadPhoto() {
            document.getElementById('beforePhoto').classList.add('hidden');
            document.getElementById('enhancementProcess').classList.remove('hidden');
            
            // Animate enhancement process
            const enhancements = ['enhancement1', 'enhancement2', 'enhancement3', 'enhancement4'];
            enhancements.forEach((id, index) => {
                setTimeout(() => {
                    const element = document.getElementById(id);
                    element.classList.remove('opacity-50');
                    element.querySelector('.w-4').classList.remove('bg-gray-300');
                    element.querySelector('.w-4').classList.add('bg-success');
                }, (index + 1) * 800);
            });

            setTimeout(() => {
                document.getElementById('nextStep').classList.remove('hidden');
                updateProgress(1);
            }, 4000);
        }

        // Voice command simulation
        function simulateVoiceCommand(command) {
            switch(command) {
                case 'photo':
                    if (currentStep === 1) uploadPhoto();
                    break;
                case 'story':
                    if (currentStep === 2) generateStory();
                    break;
                case 'price':
                    if (currentStep === 3) generatePricing();
                    break;
            }
        }

        // Generate story
        function generateStory() {
            document.getElementById('storySection').classList.remove('hidden');
            setTimeout(() => {
                document.getElementById('nextStep').classList.remove('hidden');
                updateProgress(2);
            }, 2000);
        }

        // Generate pricing
        function generatePricing() {
            document.getElementById('pricingSection').classList.remove('hidden');
            setTimeout(() => {
                document.getElementById('nextStep').classList.remove('hidden');
                updateProgress(3);
            }, 2000);
        }

        // Show marketplace integration
        function showMarketplace() {
            document.getElementById('marketplaceSection').classList.remove('hidden');
            setTimeout(() => {
                document.getElementById('nextStep').classList.add('hidden');
                document.getElementById('restartDemo').classList.remove('hidden');
                updateProgress(4);
                
                // Show success after a delay
                setTimeout(() => {
                    document.getElementById('demoInterface').classList.add('hidden');
                    document.getElementById('successSection').classList.remove('hidden');
                }, 3000);
            }, 2000);
        }

        // Navigation functions
        function nextStep() {
            currentStep++;
            updateStepUI();
            
            switch(currentStep) {
                case 2:
                    generateStory();
                    break;
                case 3:
                    generatePricing();
                    break;
                case 4:
                    showMarketplace();
                    break;
            }
        }

        function previousStep() {
            if (currentStep > 1) {
                currentStep--;
                updateStepUI();
            }
        }

        // Update step UI
        function updateStepUI() {
            const steps = [
                { title: "Meet Meera", description: "Traditional textile weaver from Rajasthan", instruction: "Click 'Upload Photo' to begin Meera's journey, or use voice command '‡§´‡•ã‡§ü‡•ã ‡§≤‡•ã'" },
                { title: "AI Story Creation", description: "Generating compelling product narratives", instruction: "Watch as AI creates Meera's story in multiple languages" },
                { title: "Smart Pricing", description: "AI-powered pricing intelligence", instruction: "See how AI suggests optimal pricing based on craft complexity" },
                { title: "Global Marketplace", description: "Multi-platform integration", instruction: "Experience how the listing appears across global platforms" }
            ];

            const step = steps[currentStep - 1];
            document.getElementById('stepTitle').textContent = step.title;
            document.getElementById('stepDescription').textContent = step.description;
            document.getElementById('stepInstructions').textContent = step.instruction;

            // Update step indicators
            for (let i = 1; i <= 4; i++) {
                const stepElement = document.getElementById(`step${i}`);
                if (i <= currentStep) {
                    stepElement.classList.remove('bg-gray-200', 'text-gray-500');
                    stepElement.classList.add('bg-primary', 'text-white');
                } else {
                    stepElement.classList.remove('bg-primary', 'text-white');
                    stepElement.classList.add('bg-gray-200', 'text-gray-500');
                }
            }

            // Show/hide navigation buttons
            document.getElementById('prevStep').classList.toggle('hidden', currentStep === 1);
            document.getElementById('nextStep').classList.add('hidden');
        }

        // Update progress bars
        function updateProgress(step) {
            for (let i = 1; i <= step; i++) {
                document.getElementById(`progress${i}`).style.width = '100%';
            }
        }

        // Restart demo
        function restartDemo() {
            currentStep = 1;
            document.getElementById('successSection').classList.add('hidden');
            document.getElementById('demoInterface').classList.remove('hidden');
            
            // Reset all sections
            document.getElementById('beforePhoto').classList.remove('hidden');
            document.getElementById('enhancementProcess').classList.add('hidden');
            document.getElementById('storySection').classList.add('hidden');
            document.getElementById('pricingSection').classList.add('hidden');
            document.getElementById('marketplaceSection').classList.add('hidden');
            
            // Reset progress
            for (let i = 1; i <= 4; i++) {
                document.getElementById(`progress${i}`).style.width = '0%';
            }
            
            updateStepUI();
        }

        // Audio playback simulation
        function playVoiceIntro() {
            console.log('Playing Meera\'s voice introduction');
        }

        function playStoryAudio(language) {
            console.log(`Playing story in ${language}`);
        }

        // Story language switching
        function showStory(language) {
            // Update active tab
            document.querySelectorAll('[onclick^="showStory"]').forEach(tab => {
                tab.classList.remove('text-primary', 'border-b-2', 'border-primary');
                tab.classList.add('text-text-secondary');
            });
            
            event.target.classList.remove('text-text-secondary');
            event.target.classList.add('text-primary', 'border-b-2', 'border-primary');

            // Show corresponding story content
            const stories = {
                hindi: {
                    title: "‡§π‡§∏‡•ç‡§§‡§®‡§ø‡§∞‡•ç‡§Æ‡§ø‡§§ ‡§¨‡§Ç‡§ß‡§®‡•Ä ‡§¶‡•Å‡§™‡§ü‡•ç‡§ü‡§æ - ‡§∞‡§Ç‡§ó‡•ã‡§Ç ‡§ï‡•Ä ‡§µ‡§ø‡§∞‡§æ‡§∏‡§§",
                    content: "‡§Ø‡§π ‡§ñ‡•Ç‡§¨‡§∏‡•Ç‡§∞‡§§ ‡§¨‡§Ç‡§ß‡§®‡•Ä ‡§¶‡•Å‡§™‡§ü‡•ç‡§ü‡§æ ‡§ú‡•ã‡§ß‡§™‡•Å‡§∞, ‡§∞‡§æ‡§ú‡§∏‡•ç‡§•‡§æ‡§® ‡§ï‡•Ä ‡§Æ‡•Ä‡§∞‡§æ ‡§¶‡•á‡§µ‡•Ä ‡§ï‡•á ‡§™‡§∞‡§ø‡§µ‡§æ‡§∞ ‡§ï‡•Ä ‡§§‡•Ä‡§® ‡§™‡•Ä‡§¢‡§º‡§ø‡§Ø‡•ã‡§Ç ‡§ï‡•Ä ‡§ï‡§≤‡§æ‡§ï‡§æ‡§∞‡•Ä ‡§ï‡•ã ‡§¶‡§∞‡•ç‡§∂‡§æ‡§§‡§æ ‡§π‡•à‡•§ ‡§π‡§∞ ‡§õ‡•ã‡§ü‡§æ ‡§¨‡§ø‡§Ç‡§¶‡•Å ‡§π‡§æ‡§• ‡§∏‡•á ‡§¨‡§æ‡§Ç‡§ß‡§æ ‡§î‡§∞ ‡§∞‡§Ç‡§ó‡§æ ‡§ó‡§Ø‡§æ ‡§π‡•à, ‡§ú‡•ã ‡§∏‡§¶‡§ø‡§Ø‡•ã‡§Ç ‡§∏‡•á ‡§ö‡§≤‡•Ä ‡§Ü ‡§∞‡§π‡•Ä ‡§™‡§æ‡§∞‡§Ç‡§™‡§∞‡§ø‡§ï ‡§§‡§ï‡§®‡•Ä‡§ï‡•ã‡§Ç ‡§ï‡§æ ‡§â‡§™‡§Ø‡•ã‡§ó ‡§ï‡§∞‡§ï‡•á ‡§¨‡§®‡§æ‡§Ø‡§æ ‡§ó‡§Ø‡§æ ‡§π‡•à‡•§"
                },
                gujarati: {
                    title: "‡™π‡™∏‡´ç‡™§‡™ï‡™≤‡™æ ‡™¨‡™Ç‡™ß‡™£‡´Ä ‡™¶‡´Å‡™™‡™ü‡´ç‡™ü‡´ã - ‡™∞‡™Ç‡™ó‡´ã‡™®‡´ã ‡™µ‡™æ‡™∞‡™∏‡´ã",
                    content: "‡™Ü ‡™∏‡´Å‡™Ç‡™¶‡™∞ ‡™¨‡™Ç‡™ß‡™£‡´Ä ‡™¶‡´Å‡™™‡™ü‡´ç‡™ü‡´ã ‡™ú‡´ã‡™ß‡™™‡´Å‡™∞, ‡™∞‡™æ‡™ú‡™∏‡´ç‡™•‡™æ‡™®‡™®‡´Ä ‡™Æ‡´Ä‡™∞‡™æ ‡™¶‡´á‡™µ‡´Ä‡™®‡™æ ‡™™‡™∞‡™ø‡™µ‡™æ‡™∞‡™®‡´Ä ‡™§‡´ç‡™∞‡™£ ‡™™‡´á‡™¢‡´Ä‡™ì‡™®‡´Ä ‡™ï‡™≤‡™æ‡™ï‡™æ‡™∞‡´Ä‡™®‡´á ‡™¶‡™∞‡´ç‡™∂‡™æ‡™µ‡´á ‡™õ‡´á‡•§ ‡™¶‡™∞‡´á‡™ï ‡™®‡™æ‡™®‡´ã ‡™¨‡™ø‡™Ç‡™¶‡´Å ‡™π‡™æ‡™•‡™•‡´Ä ‡™¨‡™æ‡™Ç‡™ß‡™µ‡™æ‡™Æ‡™æ‡™Ç ‡™Ö‡™®‡´á ‡™∞‡™Ç‡™ó‡™µ‡™æ‡™Æ‡™æ‡™Ç ‡™Ü‡™µ‡´ç‡™Ø‡´ã ‡™õ‡´á, ‡™ú‡´á ‡™∏‡™¶‡´Ä‡™ì‡™•‡´Ä ‡™ö‡™æ‡™≤‡™§‡´Ä ‡™™‡™∞‡™Ç‡™™‡™∞‡™æ‡™ó‡™§ ‡™§‡™ï‡™®‡´Ä‡™ï‡´ã‡™®‡´ã ‡™â‡™™‡™Ø‡´ã‡™ó ‡™ï‡™∞‡´Ä‡™®‡´á ‡™¨‡™®‡™æ‡™µ‡™µ‡™æ‡™Æ‡™æ‡™Ç ‡™Ü‡™µ‡´ç‡™Ø‡´ã ‡™õ‡´á‡•§"
                }
            };

            if (language !== 'english' && stories[language]) {
                document.getElementById('storyContent').innerHTML = `
                    <div class="space-y-3">
                        <h5 class="font-semibold text-text-primary">${stories[language].title}</h5>
                        <p class="text-body text-text-secondary">${stories[language].content}</p>
                        <div class="flex items-center space-x-2">
                            <button onclick="playStoryAudio('${language}')" class="p-2 bg-primary-100 rounded-full hover:bg-primary-200 transition-cultural">
                                <svg class="h-4 w-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M8 5v10l7-5-7-5z"/>
                                </svg>
                            </button>
                            <span class="text-body-sm text-text-secondary">‡§ï‡§π‡§æ‡§®‡•Ä ‡§∏‡•Å‡§®‡•á‡§Ç</span>
                        </div>
                    </div>
                `;
            }
        }

        // Initialize demo on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-start compatibility check if coming from direct link
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('autostart') === 'true') {
                startInteractiveDemo();
            }
        });
    </script>
