    <script>
        // Global variables
        let currentUserType = '';
        let selectedCrafts = [];
        let currentStep = 1;
        let selectedLanguage = 'en';

        // Mobile menu toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Language change handler
        function changeLanguage() {
            const selector = document.getElementById('languageSelector');
            selectedLanguage = selector.value;
            console.log('Language changed to:', selectedLanguage);
            // In real implementation, this would update all UI text
        }

        // Voice playback simulation
        function playWelcomeVoice() {
            console.log('Playing welcome voice in', selectedLanguage);
            // In real implementation, this would use Web Speech API
        }

        function playVoiceSample(language) {
            console.log('Playing voice sample in', language);
            // In real implementation, this would play actual voice samples
        }

        // User type selection
        function selectUserType(type) {
            currentUserType = type;
            console.log('Selected user type:', type);
            
            // Hide user type section and show device check
            document.getElementById('userTypeSection').classList.add('hidden');
            document.getElementById('deviceCheckSection').classList.remove('hidden');
            
            // Detect device information
            detectDeviceInfo();
        }

        // Device detection
        function detectDeviceInfo() {
            // Simulate device detection
            setTimeout(() => {
                document.getElementById('deviceType').textContent = /Mobile|Android|iPhone/i.test(navigator.userAgent) ? 'Mobile Device' : 'Desktop Computer';
                document.getElementById('browserInfo').textContent = navigator.userAgent.includes('Chrome') ? 'Chrome Browser' : 'Other Browser';
                document.getElementById('connectionSpeed').textContent = 'Good Connection';
            }, 1000);
        }

        // Proceed to onboarding
        function proceedToOnboarding() {
            document.getElementById('deviceCheckSection').classList.add('hidden');
            
            if (currentUserType === 'artisan') {
                document.getElementById('artisanOnboardingSection').classList.remove('hidden');
            } else if (currentUserType === 'buyer') {
                // Redirect to heritage showcase for buyers
                window.location.href = 'cultural_heritage_showcase.html';
            } else if (currentUserType === 'organization') {
                // Redirect to partnership portal for organizations
                window.location.href = 'partnership_portal.html';
            }
        }

        // Craft selection
        function selectCraft(craftType) {
            const craftCard = event.currentTarget;
            
            if (selectedCrafts.includes(craftType)) {
                // Deselect
                selectedCrafts = selectedCrafts.filter(c => c !== craftType);
                craftCard.classList.remove('ring-2', 'ring-accent-400');
            } else {
                // Select
                selectedCrafts.push(craftType);
                craftCard.classList.add('ring-2', 'ring-accent-400');
            }
            
            // Enable/disable next button
            const nextBtn = document.getElementById('craftNextBtn');
            if (selectedCrafts.length > 0) {
                nextBtn.disabled = false;
                nextBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            } else {
                nextBtn.disabled = true;
                nextBtn.classList.add('opacity-50', 'cursor-not-allowed');
            }
        }

        // Next step navigation
        function nextStep() {
            currentStep++;
            updateProgressBar();
            
            if (currentStep === 2) {
                // Skip region selection for demo and go to voice setup
                currentStep = 3;
                updateProgressBar();
                showVoiceSetup();
            }
        }

        // Update progress bar
        function updateProgressBar() {
            const progressBar = document.getElementById('progressBar');
            const progress = (currentStep / 4) * 100;
            progressBar.style.width = progress + '%';
            
            // Update step indicators
            const steps = document.querySelectorAll('.w-8.h-8');
            steps.forEach((step, index) => {
                if (index < currentStep - 1) {
                    step.className = 'w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center text-white text-sm font-semibold';
                } else if (index === currentStep - 1) {
                    step.className = 'w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center text-white text-sm font-semibold';
                } else {
                    step.className = 'w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center text-gray-500 text-sm font-semibold';
                }
            });
        }

        // Show voice setup
        function showVoiceSetup() {
            document.getElementById('artisanOnboardingSection').classList.add('hidden');
            document.getElementById('voiceSetupSection').classList.remove('hidden');
        }

        // Microphone test
        function testMicrophone() {
            console.log('Testing microphone...');
            // Simulate microphone test
            setTimeout(() => {
                document.getElementById('micTestResult').classList.remove('hidden');
            }, 2000);
        }

        // Complete voice setup
        function completeVoiceSetup() {
            currentStep = 4;
            updateProgressBar();
            document.getElementById('voiceSetupSection').classList.add('hidden');
            document.getElementById('photoTutorialSection').classList.remove('hidden');
        }

        // Complete onboarding
        function completeOnboarding() {
            document.getElementById('photoTutorialSection').classList.add('hidden');
            document.getElementById('successSection').classList.remove('hidden');
            
            // Scroll to success section
            document.getElementById('successSection').scrollIntoView({ behavior: 'smooth' });
        }

        // Help functions
        function openTutorials() {
            console.log('Opening video tutorials');
            // In real implementation, this would open tutorial modal or page
        }

        function findMentor() {
            console.log('Finding peer mentor');
            // In real implementation, this would connect to mentor matching system
        }

        function startChat() {
            console.log('Starting live chat');
            // In real implementation, this would open chat widget
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Detect device capabilities
            if ('mediaDevices' in navigator && 'getUserMedia' in navigator.mediaDevices) {
                console.log('Microphone access available');
            }
            
            // Initialize progress bar
            updateProgressBar();
        });
    </script>
